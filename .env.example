# Production Supabase Configuration
# Replace these with your actual production Supabase credentials
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Server-side Supabase Configuration (for edge functions/server operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DB_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres

# Application Configuration
VITE_APP_NAME=TruckRecruit AI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME=true

# External Services (Production)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Monitoring & Analytics (Production)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_RATE_LIMITING=true
VITE_SESSION_TIMEOUT=3600

# Database Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Backup Database Configuration (Optional)
BACKUP_SUPABASE_URL=https://your-backup-project-ref.supabase.co
BACKUP_SUPABASE_ANON_KEY=your-backup-anon-key-here